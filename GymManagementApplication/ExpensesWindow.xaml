<Window x:Class="GymManagementApplication.ExpensesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý chi phí" Height="580" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#ecf0f1">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filter/Search -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Tổng tiền -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="QUẢN LÝ CHI PHÍ"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#2c3e50"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 10"/>

        <!-- Tìm kiếm -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 0 10">
            <Label Content="Tìm tên chi phí:" VerticalAlignment="Center" Margin="0 0 5 0"/>
            <TextBox x:Name="SearchTextBox" Width="200" Margin="0 0 10 0" TextChanged="SearchTextBox_TextChanged"/>
        </StackPanel>

        <!-- Bảng dữ liệu -->
        <DataGrid x:Name="ExpensesDataGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CellEditEnding="ExpensesDataGrid_CellEditEnding"
                  SelectionChanged="ExpensesDataGrid_SelectionChanged"
                  Margin="0 0 0 10"
                  RowHeight="30"
                  ColumnHeaderHeight="30"
                  AlternatingRowBackground="#f5f6fa"
                  GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ExpenseId}" IsReadOnly="True" Width="60"/>
                <DataGridTextColumn Header="Tên chi phí" Binding="{Binding ExpenseName}" Width="*"/>
                <DataGridTextColumn Header="Số tiền" Binding="{Binding Amount}" Width="100"/>
                <DataGridTextColumn Header="Ngày" Binding="{Binding ExpenseDate, StringFormat=dd/MM/yyyy}" Width="120"/>
                <DataGridTextColumn Header="Ghi chú" Binding="{Binding Note}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Tổng chi phí -->
        <TextBlock x:Name="TotalAmountTextBlock"
                   Grid.Row="3"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="#27ae60"
                   HorizontalAlignment="Right"
                   Margin="0 5 10 5"
                   Text="Tổng chi phí: 0 VND"/>

        <!-- Nút chức năng -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
            <Button Content="Thêm" Width="100" Margin="5" Background="#27ae60" Foreground="White" Click="BtnAdd_Click"/>
            <Button Content="Sửa" Width="100" Margin="5" Background="#2980b9" Foreground="White" Click="BtnEdit_Click"/>
            <Button Content="Xóa" Width="100" Margin="5" Background="#c0392b" Foreground="White" Click="BtnDelete_Click"/>
            <Button Content="Lưu" Width="100" Margin="5" Background="#2c3e50" Foreground="White" Click="BtnSave_Click"/>
            <Button Content="Reset" Width="100" Margin="5" Background="#7f8c8d" Foreground="White" Click="BtnReset_Click"/>
        </StackPanel>
    </Grid>
</Window>
