<Window x:Class="GymManagementApplication.RevenueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý doanh thu" Height="620" Width="1050"
        WindowStartupLocation="CenterScreen"
        Background="#ecf0f1">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="QUẢN LÝ DOANH THU"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#2c3e50"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 10"/>

        <!-- Bộ lọc theo ngày -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 0 0 10">
            <Label Content="Từ ngày:" VerticalAlignment="Center"/>
            <DatePicker x:Name="StartDatePicker" Width="120" Margin="5 0"/>
            <Label Content="Đến ngày:" VerticalAlignment="Center"/>
            <DatePicker x:Name="EndDatePicker" Width="120" Margin="5 0"/>
            <Button Content="Lọc" Width="80" Margin="10 0" Click="BtnFilter_Click"/>
        </StackPanel>

        <!-- Bảng dữ liệu -->
        <DataGrid x:Name="RevenueDataGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CellEditEnding="RevenueDataGrid_CellEditEnding"
                  SelectionChanged="RevenueDataGrid_SelectionChanged"
                  AlternatingRowBackground="#f5f6fa"
                  RowHeight="30"
                  ColumnHeaderHeight="30"
                  Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding RevenueId}" IsReadOnly="True" Width="60"/>
                <DataGridTextColumn Header="Hội viên" Binding="{Binding Member.FullName}" Width="200"/>
                <DataGridTextColumn Header="Ngày thanh toán" Binding="{Binding PaymentDate, StringFormat=dd/MM/yyyy}" Width="150"/>
                <DataGridTextColumn Header="Số tiền" Binding="{Binding Amount}" Width="100"/>
                <DataGridTextColumn Header="Ghi chú" Binding="{Binding Note}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Tổng tiền -->
        <TextBlock x:Name="TotalAmountTextBlock"
                   Grid.Row="3"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="#27ae60"
                   HorizontalAlignment="Right"
                   Margin="0 5 10 5"
                   Text="Tổng doanh thu: 0 VND"/>

        <!-- Nút chức năng -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
            <Button Content="Thêm" Width="100" Margin="5" Background="#27ae60" Foreground="White" Click="BtnAdd_Click"/>
            <Button Content="Sửa" Width="100" Margin="5" Background="#2980b9" Foreground="White" Click="BtnEdit_Click"/>
            <Button Content="Xóa" Width="100" Margin="5" Background="#c0392b" Foreground="White" Click="BtnDelete_Click"/>
            <Button Content="Lưu" Width="100" Margin="5" Background="#2c3e50" Foreground="White" Click="BtnSave_Click"/>
            <Button Content="Reset" Width="100" Margin="5" Background="#7f8c8d" Foreground="White" Click="BtnReset_Click"/>
        </StackPanel>
    </Grid>
</Window>
