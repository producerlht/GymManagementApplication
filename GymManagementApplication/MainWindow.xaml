<Window x:Class="GymManagementApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gym Management" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu bên trái -->
        <StackPanel Grid.Column="0" Background="#2c3e50" Margin="10">
            <Border Background="#34495e" CornerRadius="5" Padding="10" Margin="0 0 0 15">
                <StackPanel>
                    <TextBlock Text="Xin chào," Foreground="White" FontWeight="Bold" FontSize="14"/>
                    <TextBlock x:Name="txtUserFullName" Text="Tên người dùng" Foreground="White" FontSize="13"/>
                    <Button x:Name="btnEditProfile" Content="Sửa thông tin" Margin="0 10 0 0" Padding="5"
                            Background="#1abc9c" Foreground="White" Click="BtnEditProfile_Click"/>
                </StackPanel>
            </Border>

            <TextBlock Text="TÁC VỤ" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0 0 0 10"/>
            <Button x:Name="btnViewMembers" Content="Xem thông tin hội viên" Margin="0 5" Padding="10" Click="BtnViewMembers_Click"/>
            <Button x:Name="btnManageExpenses" Content="Quản lý chi phí" Margin="0 5" Padding="10" Click="BtnManageExpenses_Click"/>
            <Button x:Name="btnManageRevenue" Content="Quản lý doanh thu" Margin="0 5" Padding="10" Click="BtnManageRevenue_Click"/>
            <Button x:Name="btnLogout" Content="Đăng xuất" Margin="0 30 0 0" Padding="10"
                    Background="DarkRed" Foreground="White" Click="BtnLogout_Click"/>
        </StackPanel>

        <!-- Nội dung chính -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="110"/>
            </Grid.RowDefinitions>

            <!-- DataGrid -->
            <DataGrid x:Name="UserDataGrid" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="False" Margin="0 0 0 10"
                      CellEditEnding="UserDataGrid_CellEditEnding">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding MemberId}" Width="50"/>
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Giới tính" Binding="{Binding Gender}" Width="100"/>
                    <DataGridTextColumn Header="Ngày sinh" Binding="{Binding BirthDate}" Width="150"/>
                    <DataGridTextColumn Header="SĐT" Binding="{Binding Phone}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Nút chức năng -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 0 10">
                <Button x:Name="btnAdd" Content="Thêm" Width="100" Height="35" Background="#27ae60" Foreground="White" Margin="0,0,10,0" Click="BtnAdd_Click"/>
                <Button x:Name="btnEdit" Content="Sửa" Width="100" Height="35" Background="#2980b9" Foreground="White" Margin="0,0,10,0" Click="BtnEdit_Click"/>
                <Button x:Name="btnDelete" Content="Xóa" Width="100" Height="35" Background="#c0392b" Foreground="White" Margin="0,0,10,0" Click="BtnDelete_Click"/>
                <Button x:Name="btnReset" Content="Reset" Width="100" Height="35" Background="#7f8c8d" Foreground="White" Click="BtnReset_Click"/>
            </StackPanel>

            <!-- Quảng cáo -->
            <Border Grid.Row="2" Background="#ecf0f1" CornerRadius="10" Padding="5" Margin="0 10 0 0">
                <Image x:Name="imgAds"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>