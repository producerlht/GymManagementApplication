<Window x:Class="GymManagementApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymManagementApplication"
        mc:Ignorable="d"
        Title="Gym Management" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Menu trái -->
            <ColumnDefinition Width="*"/>
            <!-- Nội dung chính -->
        </Grid.ColumnDefinitions>

        <!-- ===== Cột trái: Thông tin người dùng + Chức năng ===== -->
        <StackPanel Grid.Column="0" Background="#2c3e50" Margin="10">
            <!-- Thông tin người dùng -->
            <Border Background="#34495e" CornerRadius="5" Padding="10" Margin="0 0 0 15">
                <StackPanel>
                    <TextBlock Text="Xin chào," Foreground="White" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="Đỗ Kiều My" Foreground="White" FontSize="13"/>
                    <Button Content="Sửa thông tin" Margin="0 10 0 0" Padding="5"
                            Background="#1abc9c" Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- Menu chức năng -->
            <TextBlock Text="CHỨC NĂNG" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0 0 0 10"/>
            <Button Content="Xem thông tin hội viên" Margin="0 5" Padding="10"/>
            <Button Content="Quản lý chi phí" Margin="0 5" Padding="10"/>
            <Button Content="Quản lý doanh thu" Margin="0 5" Padding="10"/>

            <!-- Đăng xuất -->
            <Button Content="Đăng xuất" Margin="0 30 0 0" Padding="10"
                    Background="DarkRed" Foreground="White"/>
        </StackPanel>

        <!-- ===== Nội dung chính: Bảng + Quảng cáo ===== -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
                <RowDefinition Height="Auto"/>
                <!-- Button -->
                <RowDefinition Height="110"/>
                <!-- Quảng cáo -->
            </Grid.RowDefinitions>

            <!-- ===== Bảng người dùng ===== -->
            <DataGrid x:Name="UserDataGrid" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True" Margin="0 0 0 10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Giới tính" Binding="{Binding Gender}" Width="100"/>
                    <DataGridTextColumn Header="Ngày sinh" Binding="{Binding BirthDate}" Width="150"/>
                    <DataGridTextColumn Header="SĐT" Binding="{Binding Phone}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- ===== Nút chuyển trang (thêm/sửa/xóa) ===== -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 0 10">
                <!-- Removed 'Spacing' property as it is not valid for StackPanel -->
                <Button Content="Thêm" Width="100" Height="35" Background="#27ae60" Foreground="White" Margin="0,0,10,0"/>
                <Button Content="Sửa" Width="100" Height="35" Background="#2980b9" Foreground="White" Margin="0,0,10,0"/>
                <Button Content="Xóa" Width="100" Height="35" Background="#c0392b" Foreground="White" Margin="0,0,10,0"/>
                <Button Content="Reset" Width="100" Height="35" Background="#7f8c8d" Foreground="White"/>
            </StackPanel>

            <!-- ===== Quảng cáo (ảnh) ===== -->
            <Border Grid.Row="2" Background="#ecf0f1" CornerRadius="10" Padding="5" Margin="0 10 0 0">
                <Image 
                       Stretch="UniformToFill"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>