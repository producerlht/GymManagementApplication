<Window x:Class="GymManagementApplication.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditProfileWindow" Height="544" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#f5f6fa"
        FontFamily="Segoe UI">

    <Border Background="White" CornerRadius="10" Padding="20" Margin="20" BorderBrush="#dcdde1" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Text="CẬP NHẬT THÔNG TIN CÁ NHÂN"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#2c3e50"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

            <!-- Nội dung -->
            <StackPanel Grid.Row="1" Width="360" HorizontalAlignment="Center" Margin="3">
                <Label Content="Tên đăng nhập:"/>
                <TextBox x:Name="UsernameTextBox" IsReadOnly="True" Margin="0 0 0 10"/>

                <Label Content="Họ tên:"/>
                <TextBox x:Name="FullNameTextBox" Margin="0 0 0 10"/>

                <Label Content="Vai trò:"/>
                <TextBox x:Name="RoleTextBox" IsReadOnly="True" Margin="0 0 0 10"/>

                <Separator Margin="0 10"/>

                <Label Content="Mật khẩu hiện tại:"/>
                <PasswordBox x:Name="CurrentPasswordBox" Margin="0 0 0 10"/>

                <Label Content="Mật khẩu mới:"/>
                <PasswordBox x:Name="NewPasswordBox" Margin="0 0 0 10"/>

                <Label Content="Nhập lại mật khẩu mới:"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Margin="0 0 0 20"/>

                <Button Content="Lưu thay đổi"
                        Width="150"
                        Height="36"
                        HorizontalAlignment="Center"
                        Background="#27ae60"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
